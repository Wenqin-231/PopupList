<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="PopupWindowAnimBottom">
        <item name="android:windowEnterAnimation">@anim/popup_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_bottom_exit</item>
    </style>

    <style name="PopupWindowAnimTop">
        <item name="android:windowEnterAnimation">@anim/popup_top_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_top_exit</item>
    </style>

</resources>
